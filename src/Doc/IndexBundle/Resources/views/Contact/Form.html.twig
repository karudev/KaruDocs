 {{form_start(form, {'action' : path('_account_contact_form', {'contact_id' : contact_id}), 'attr' : { 'class' : 'form-horizontal' }})}}
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Contact</h4>
      </div>
      <div class="modal-body">
     
           <div class="form-group">
               <div class="col-lg-6">{{form_row(form.lastname,{'attr' : {'class' :'form-control'} })}}</div>
               <div class="col-lg-6">{{form_row(form.firstname,{'attr' : {'class' :'form-control'} })}}</div>
           </div>
           <div class="form-group">
               <div class="col-lg-12"> {{form_row(form.address,{'attr' : {'class' :'form-control'} })}}</div>
           </div>
           <div class="form-group">
               <div class="col-lg-4">{{form_row(form.cp,{'attr' : {'class' :'form-control'} })}}</div>
               <div class="col-lg-8">{{form_row(form.city,{'attr' : {'class' :'form-control'} })}}</div>
           </div>
           <div class="form-group">
               <div class="col-lg-4">
              {{form_row(form.district,{'attr' : {'class' :'form-control'} })}}
               </div>
               <div class="col-lg-8"> {{form_row(form.country,{'attr' : {'class' :'form-control'} })}}</div>
           </div>
           <div class="form-group">
              <div class="col-lg-6"> {{form_row(form.email,{'attr' : {'class' :'form-control'} })}}</div>
           </div>
           <div class="form-group">
                <div class="col-lg-6">
              {{form_row(form.fixe,{'attr' : {'class' :'form-control'} })}}
               </div>
                <div class="col-lg-6">
              {{form_row(form.phone,{'attr' : {'class' :'form-control'} })}}
               </div>
           </div>
           <div class="form-group">
                 <div class="col-lg-6">
              {{form_row(form.website,{'attr' : {'class' :'form-control'} })}}
                     </div>
           </div>
           <div class="form-group">
                 <div class="col-lg-6">
              {{form_row(form.organisationName,{'attr' : {'class' :'form-control'} })}}
             </div>
           </div>
     
      </div>
      <div class="modal-footer">
        <button type="reset" class="btn btn-default" data-dismiss="modal">Fermer</button>
        <button type="submit" class="btn btn-primary">Enregister</button>
      </div>
 {{form_end(form)}}
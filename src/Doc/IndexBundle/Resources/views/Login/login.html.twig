{% extends "DocIndexBundle::layout.html.twig" %}
{% block contain %}
 {% if error.message is defined %}
    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        {{error.message}}
    </div>
{% endif %}
    <div style="margin: 0 auto;max-width:370px;" >
    <h3>Cr√©ation et gestion de documents</h3>
    <p>Connectez-vous sur votre espace.</p>
    <div class="row">
        <form action="{{path('_logincheck')}}" method="post">
            <div class="form-group">
                <input required name="_username" class="form-control" type="text" placeholder="Identifiant" value="{{last_username}}" /> 
            </div>
            <div class="form-group">
                <input required name="_password"  class="form-control" type="password" placeholder="Mot de passe" /> 
            </div>
            <div class="form-group">
                <button  style="float: left" type="submit" class="btn btn-default" >Se connecter</button>
            </div>
        </form>
    </div>
</div>
<div  style="text-align: center" class="row">
    <h3>Ou</h3>
    <button  id="inscription"   type="button" class="btn btn-success">Inscrivez vous maintenant !</button>
    <div class="row">

        <div  style="display:none" class="inscription">
            <p>Saisissez les informations suivantes.</p>
        {{form_start(form, {'action' : path('_inscription') } ) }}
            {{form_widget(form.username)}}
            {{form_widget(form.password)}}
            {{form_widget(form.lastname)}}
            {{form_widget(form.firstname)}}
            {{form_widget(form.email)}}
           {# {{form_widget(form.tel)}}
            {{form_widget(form.cp)}}
            {{form_widget(form.city)}}
            {{form_widget(form.district)}}
            {{form_widget(form.country)}}#}
            <button style="float: left" type="submit" class="btn btn-default" >Enregistrer</button>
        <div style="display:none" >{{form_end(form)}}</div>
        </div>
    </div>
</div>
{% endblock %}
{% block js_footer %}
 <script src="{{asset('bundles/docindex/js/login.js')}}"></script>
{% endblock %}